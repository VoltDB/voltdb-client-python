pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'python -m pip install twine; python -m build --verbose'
            }
        }
        stage('Test') {
            steps {
                sh 'python -m unittest tests'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo Nothing'
            }
        }
    }
}
